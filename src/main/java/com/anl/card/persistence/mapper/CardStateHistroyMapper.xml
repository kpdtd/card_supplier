<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.CardStateHistroyMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_card_state_histroy (
        	id,
        	card_id,
        	original_state,
        	state,
        	trigger_point,
        	detail,
        	create_time
        ) VALUES (
        	#{id},
        	#{cardId},
        	#{originalState},
        	#{state},
        	#{triggerPoint},
        	#{detail},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.CardStateHistroy">
        UPDATE t_card_state_histroy 
		<set>
	        <if test="cardId != null">
	        	card_id = #{cardId},
	        </if>
	        <if test="originalState != null">
	        	original_state = #{originalState},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="triggerPoint != null">
	        	trigger_point = #{triggerPoint},
	        </if>
	        <if test="detail != null">
	        	detail = #{detail},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_card_state_histroy WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.CardStateHistroy">
		SELECT
			*
		FROM
			t_card_state_histroy 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="originalState != null">
				AND original_state = #{originalState}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="triggerPoint != null">
				AND trigger_point = #{triggerPoint}
			</if>
			<if test="detail != null">
				AND detail = #{detail}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="originalState != null">
				AND original_state = #{originalState}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="triggerPoint != null">
				AND trigger_point = #{triggerPoint}
			</if>
			<if test="detail != null">
				AND detail = #{detail}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_card_state_histroy
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.CardStateHistroy">
		SELECT 
			*
		FROM
			t_card_state_histroy 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.CardStateHistroy" resultType="com.anl.card.persistence.po.CardStateHistroy">
		SELECT 
			*
		FROM 
			t_card_state_histroy 
	    <include refid="whereForPo" />
	</select>
</mapper>

