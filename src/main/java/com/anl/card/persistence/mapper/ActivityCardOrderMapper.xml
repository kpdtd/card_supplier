	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_activity_card_order
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.ActivityCardOrder">
		SELECT 
			*
		FROM
			t_activity_card_order 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.ActivityCardOrder" resultType="com.anl.card.persistence.po.ActivityCardOrder">
		SELECT 
			*
		FROM 
			t_activity_card_order 
	    <include refid="whereForPo" />
	</select>
</mapper>

