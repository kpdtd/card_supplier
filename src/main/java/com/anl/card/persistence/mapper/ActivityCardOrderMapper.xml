<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.ActivityCardOrderMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_activity_card_order (
        	id,
        	mobile,
        	iccid,
        	money,
        	pay_type,
        	trade_no,
        	valid_days,
        	open_id,
        	out_trade_no,
        	ip,
        	payer,
        	state,
        	causes,
        	aid,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{mobile},
        	#{iccid},
        	#{money},
        	#{payType},
        	#{tradeNo},
        	#{validDays},
        	#{openId},
        	#{outTradeNo},
        	#{ip},
        	#{payer},
        	#{state},
        	#{causes},
        	#{aid},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.ActivityCardOrder">
        UPDATE t_activity_card_order 
		<set>
	        <if test="mobile != null">
	        	mobile = #{mobile},
	        </if>
	        <if test="iccid != null">
	        	iccid = #{iccid},
	        </if>
	        <if test="money != null">
	        	money = #{money},
	        </if>
	        <if test="payType != null">
	        	pay_type = #{payType},
	        </if>
	        <if test="tradeNo != null">
	        	trade_no = #{tradeNo},
	        </if>
	        <if test="validDays != null">
	        	valid_days = #{validDays},
	        </if>
	        <if test="openId != null">
	        	open_id = #{openId},
	        </if>
	        <if test="outTradeNo != null">
	        	out_trade_no = #{outTradeNo},
	        </if>
	        <if test="ip != null">
	        	ip = #{ip},
	        </if>
	        <if test="payer != null">
	        	payer = #{payer},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="causes != null">
	        	causes = #{causes},
	        </if>
	        <if test="aid != null">
	        	aid = #{aid},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_activity_card_order WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.ActivityCardOrder">
		SELECT
			*
		FROM
			t_activity_card_order 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="mobile != null">
				AND mobile = #{mobile}
			</if>
			<if test="iccid != null">
				AND iccid = #{iccid}
			</if>
			<if test="money != null">
				AND money = #{money}
			</if>
			<if test="payType != null">
				AND pay_type = #{payType}
			</if>
			<if test="tradeNo != null">
				AND trade_no = #{tradeNo}
			</if>
			<if test="validDays != null">
				AND valid_days = #{validDays}
			</if>
			<if test="openId != null">
				AND open_id = #{openId}
			</if>
			<if test="outTradeNo != null">
				AND out_trade_no = #{outTradeNo}
			</if>
			<if test="ip != null">
				AND ip = #{ip}
			</if>
			<if test="payer != null">
				AND payer = #{payer}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="causes != null">
				AND causes = #{causes}
			</if>
			<if test="aid != null">
				AND aid = #{aid}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
