<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.SysResourcesMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="resourceId">
    <![CDATA[
        INSERT INTO t_sys_resources (
        	RESOURCE_ID,
        	RESOURCE_NAME,
        	RESOURCE_DESC,
        	RESOURCE_TYPE,
        	RESOURCE_STRING,
        	PRIORITY,
        	MODULE,
        	PARENT_ID
        ) VALUES (
        	#{resourceId},
        	#{resourceName},
        	#{resourceDesc},
        	#{resourceType},
        	#{resourceString},
        	#{priority},
        	#{module},
        	#{parentId}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.SysResources">
        UPDATE t_sys_resources 
		<set>
	        <if test="resourceName != null">
	        	RESOURCE_NAME = #{resourceName},
	        </if>
	        <if test="resourceDesc != null">
	        	RESOURCE_DESC = #{resourceDesc},
	        </if>
	        <if test="resourceType != null">
	        	RESOURCE_TYPE = #{resourceType},
	        </if>
	        <if test="resourceString != null">
	        	RESOURCE_STRING = #{resourceString},
	        </if>
	        <if test="priority != null">
	        	PRIORITY = #{priority},
	        </if>
	        <if test="module != null">
	        	MODULE = #{module},
	        </if>
	        <if test="parentId != null">
	        	PARENT_ID = #{parentId}
	        </if>
	    </set>
        WHERE
	        RESOURCE_ID = #{resourceId}
	</update>

	<delete id="deleteById">
        DELETE FROM t_sys_resources WHERE
        RESOURCE_ID = #{resourceId}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.SysResources">
		SELECT
			*
		FROM
			t_sys_resources 
	    WHERE
	        RESOURCE_ID = #{resourceId} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="resourceId != null">
				AND RESOURCE_ID = #{resourceId}
			</if>
			<if test="resourceName != null">
				AND RESOURCE_NAME = #{resourceName}
			</if>
			<if test="resourceDesc != null">
				AND RESOURCE_DESC = #{resourceDesc}
			</if>
			<if test="resourceType != null">
				AND RESOURCE_TYPE = #{resourceType}
			</if>
			<if test="resourceString != null">
				AND RESOURCE_STRING = #{resourceString}
			</if>
			<if test="priority != null">
				AND PRIORITY = #{priority}
			</if>
			<if test="module != null">
				AND MODULE = #{module}
			</if>
			<if test="parentId != null">
				AND PARENT_ID = #{parentId}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="resourceId != null">
				AND RESOURCE_ID = #{resourceId}
			</if>
			<if test="resourceName != null">
				AND RESOURCE_NAME = #{resourceName}
			</if>
			<if test="resourceDesc != null">
				AND RESOURCE_DESC = #{resourceDesc}
			</if>
			<if test="resourceType != null">
				AND RESOURCE_TYPE = #{resourceType}
			</if>
			<if test="resourceString != null">
				AND RESOURCE_STRING = #{resourceString}
			</if>
			<if test="priority != null">
				AND PRIORITY = #{priority}
			</if>
			<if test="module != null">
				AND MODULE = #{module}
			</if>
			<if test="parentId != null">
				AND PARENT_ID = #{parentId}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_sys_resources
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.SysResources">
		SELECT 
			*
		FROM
			t_sys_resources 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.SysResources" resultType="com.anl.card.persistence.po.SysResources">
		SELECT 
			*
		FROM 
			t_sys_resources 
	    <include refid="whereForPo" />
	</select>
</mapper>

