<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.SysMessageMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_sys_message (
        	id,
        	create_time,
        	update_time,
        	title,
        	content,
        	status
        ) VALUES (
        	#{id},
        	#{createTime},
        	#{updateTime},
        	#{title},
        	#{content},
        	#{status}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.SysMessage">
        UPDATE t_sys_message 
		<set>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime},
	        </if>
	        <if test="title != null">
	        	title = #{title},
	        </if>
	        <if test="content != null">
	        	content = #{content},
	        </if>
	        <if test="status != null">
	        	status = #{status}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_sys_message WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.SysMessage">
		SELECT
			*
		FROM
			t_sys_message 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
			<if test="title != null">
				AND title = #{title}
			</if>
			<if test="content != null">
				AND content = #{content}
			</if>
			<if test="status != null">
				AND status = #{status}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="title != null">
				AND title = #{title}
			</if>
			<if test="content != null">
				AND content = #{content}
			</if>
			<if test="status != null">
				AND status = #{status}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_sys_message
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.SysMessage">
		SELECT 
			*
		FROM
			t_sys_message 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.SysMessage" resultType="com.anl.card.persistence.po.SysMessage">
		SELECT 
			*
		FROM 
			t_sys_message 
	    <include refid="whereForPo" />
	</select>
</mapper>

