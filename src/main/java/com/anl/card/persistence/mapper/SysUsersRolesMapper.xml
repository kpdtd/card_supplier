<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.SysUsersRolesMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="usersRolesId">
    <![CDATA[
        INSERT INTO t_sys_users_roles (
        	USERS_ROLES_ID,
        	USERS_ID,
        	ROLES_ID
        ) VALUES (
        	#{usersRolesId},
        	#{usersId},
        	#{rolesId}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.SysUsersRoles">
        UPDATE t_sys_users_roles 
		<set>
	        <if test="usersId != null">
	        	USERS_ID = #{usersId},
	        </if>
	        <if test="rolesId != null">
	        	ROLES_ID = #{rolesId}
	        </if>
	    </set>
        WHERE
	        USERS_ROLES_ID = #{usersRolesId}
	</update>

	<delete id="deleteById">
        DELETE FROM t_sys_users_roles WHERE
        USERS_ROLES_ID = #{usersRolesId}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.SysUsersRoles">
		SELECT
			*
		FROM
			t_sys_users_roles 
	    WHERE
	        USERS_ROLES_ID = #{usersRolesId} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="usersRolesId != null">
				AND USERS_ROLES_ID = #{usersRolesId}
			</if>
			<if test="usersId != null">
				AND USERS_ID = #{usersId}
			</if>
			<if test="rolesId != null">
				AND ROLES_ID = #{rolesId}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="usersRolesId != null">
				AND USERS_ROLES_ID = #{usersRolesId}
			</if>
			<if test="usersId != null">
				AND USERS_ID = #{usersId}
			</if>
			<if test="rolesId != null">
				AND ROLES_ID = #{rolesId}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_sys_users_roles
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.SysUsersRoles">
		SELECT 
			*
		FROM
			t_sys_users_roles 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.SysUsersRoles" resultType="com.anl.card.persistence.po.SysUsersRoles">
		SELECT 
			*
		FROM 
			t_sys_users_roles 
	    <include refid="whereForPo" />
	</select>
</mapper>

