<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.SupplierPoolMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_supplier_pool (
        	id,
        	supplier_id,
        	pool_name,
        	pool_value,
        	card_number,
        	pool_used,
        	threshold,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{supplierId},
        	#{poolName},
        	#{poolValue},
        	#{cardNumber},
        	#{poolUsed},
        	#{threshold},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.SupplierPool">
        UPDATE t_supplier_pool 
		<set>
	        <if test="supplierId != null">
	        	supplier_id = #{supplierId},
	        </if>
	        <if test="poolName != null">
	        	pool_name = #{poolName},
	        </if>
	        <if test="poolValue != null">
	        	pool_value = #{poolValue},
	        </if>
	        <if test="cardNumber != null">
	        	card_number = #{cardNumber},
	        </if>
	        <if test="poolUsed != null">
	        	pool_used = #{poolUsed},
	        </if>
	        <if test="threshold != null">
	        	threshold = #{threshold},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_supplier_pool WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.SupplierPool">
		SELECT
			*
		FROM
			t_supplier_pool 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="supplierId != null">
				AND supplier_id = #{supplierId}
			</if>
			<if test="poolName != null">
				AND pool_name = #{poolName}
			</if>
			<if test="poolValue != null">
				AND pool_value = #{poolValue}
			</if>
			<if test="cardNumber != null">
				AND card_number = #{cardNumber}
			</if>
			<if test="poolUsed != null">
				AND pool_used = #{poolUsed}
			</if>
			<if test="threshold != null">
				AND threshold = #{threshold}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="supplierId != null">
				AND supplier_id = #{supplierId}
			</if>
			<if test="poolName != null">
				AND pool_name = #{poolName}
			</if>
			<if test="poolValue != null">
				AND pool_value = #{poolValue}
			</if>
			<if test="cardNumber != null">
				AND card_number = #{cardNumber}
			</if>
			<if test="poolUsed != null">
				AND pool_used = #{poolUsed}
			</if>
			<if test="threshold != null">
				AND threshold = #{threshold}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_supplier_pool
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.SupplierPool">
		SELECT 
			*
		FROM
			t_supplier_pool 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.SupplierPool" resultType="com.anl.card.persistence.po.SupplierPool">
		SELECT 
			*
		FROM 
			t_supplier_pool 
	    <include refid="whereForPo" />
	</select>
</mapper>

