<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.DataDictionaryMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_data_dictionary (
        	id,
        	grouping,
        	name,
        	value,
        	description,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{grouping},
        	#{name},
        	#{value},
        	#{description},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.DataDictionary">
        UPDATE t_data_dictionary 
		<set>
	        <if test="grouping != null">
	        	grouping = #{grouping},
	        </if>
	        <if test="name != null">
	        	name = #{name},
	        </if>
	        <if test="value != null">
	        	value = #{value},
	        </if>
	        <if test="description != null">
	        	description = #{description},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_data_dictionary WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.DataDictionary">
		SELECT
			*
		FROM
			t_data_dictionary 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="grouping != null">
				AND grouping = #{grouping}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="value != null">
				AND value = #{value}
			</if>
			<if test="description != null">
				AND description = #{description}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="grouping != null">
				AND grouping = #{grouping}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="value != null">
				AND value = #{value}
			</if>
			<if test="description != null">
				AND description = #{description}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_data_dictionary
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.DataDictionary">
		SELECT 
			*
		FROM
			t_data_dictionary 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.DataDictionary" resultType="com.anl.card.persistence.po.DataDictionary">
		SELECT 
			*
		FROM 
			t_data_dictionary 
	    <include refid="whereForPo" />
	</select>
</mapper>

