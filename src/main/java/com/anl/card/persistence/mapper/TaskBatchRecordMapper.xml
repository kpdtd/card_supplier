<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.TaskBatchRecordMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_task_batch_record (
        	id,
        	task_record_id,
        	card_iccid,
        	result,
        	exec_count,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{taskRecordId},
        	#{cardIccid},
        	#{result},
        	#{execCount},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.TaskBatchRecord">
        UPDATE t_task_batch_record 
		<set>
	        <if test="taskRecordId != null">
	        	task_record_id = #{taskRecordId},
	        </if>
	        <if test="cardIccid != null">
	        	card_iccid = #{cardIccid},
	        </if>
	        <if test="result != null">
	        	result = #{result},
	        </if>
	        <if test="execCount != null">
	        	exec_count = #{execCount},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_task_batch_record WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.TaskBatchRecord">
		SELECT
			*
		FROM
			t_task_batch_record 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="taskRecordId != null">
				AND task_record_id = #{taskRecordId}
			</if>
			<if test="cardIccid != null">
				AND card_iccid = #{cardIccid}
			</if>
			<if test="result != null">
				AND result = #{result}
			</if>
			<if test="execCount != null">
				AND exec_count = #{execCount}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="taskRecordId != null">
				AND task_record_id = #{taskRecordId}
			</if>
			<if test="cardIccid != null">
				AND card_iccid = #{cardIccid}
			</if>
			<if test="result != null">
				AND result = #{result}
			</if>
			<if test="execCount != null">
				AND exec_count = #{execCount}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_task_batch_record
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.TaskBatchRecord">
		SELECT 
			*
		FROM
			t_task_batch_record 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.TaskBatchRecord" resultType="com.anl.card.persistence.po.TaskBatchRecord">
		SELECT 
			*
		FROM 
			t_task_batch_record 
	    <include refid="whereForPo" />
	</select>
</mapper>

