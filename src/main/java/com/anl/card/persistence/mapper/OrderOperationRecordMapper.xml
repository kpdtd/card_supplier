<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.OrderOperationRecordMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_order_operation_record (
        	id,
        	order_id,
        	agency_id,
        	state,
        	create_time
        ) VALUES (
        	#{id},
        	#{orderId},
        	#{agencyId},
        	#{state},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.OrderOperationRecord">
        UPDATE t_order_operation_record 
		<set>
	        <if test="orderId != null">
	        	order_id = #{orderId},
	        </if>
	        <if test="agencyId != null">
	        	agency_id = #{agencyId},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_order_operation_record WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.OrderOperationRecord">
		SELECT
			*
		FROM
			t_order_operation_record 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="orderId != null">
				AND order_id = #{orderId}
			</if>
			<if test="agencyId != null">
				AND agency_id = #{agencyId}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="orderId != null">
				AND order_id = #{orderId}
			</if>
			<if test="agencyId != null">
				AND agency_id = #{agencyId}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_order_operation_record
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.OrderOperationRecord">
		SELECT 
			*
		FROM
			t_order_operation_record 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.OrderOperationRecord" resultType="com.anl.card.persistence.po.OrderOperationRecord">
		SELECT 
			*
		FROM 
			t_order_operation_record 
	    <include refid="whereForPo" />
	</select>
</mapper>

