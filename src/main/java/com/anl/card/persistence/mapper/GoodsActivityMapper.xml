<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.GoodsActivityMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_goods_activity (
        	id,
        	title,
        	exec_logic,
        	info,
        	province,
        	type,
        	operators,
        	ext_json,
        	state,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{title},
        	#{execLogic},
        	#{info},
        	#{province},
        	#{type},
        	#{operators},
        	#{extJson},
        	#{state},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.GoodsActivity">
        UPDATE t_goods_activity 
		<set>
	        <if test="title != null">
	        	title = #{title},
	        </if>
	        <if test="execLogic != null">
	        	exec_logic = #{execLogic},
	        </if>
	        <if test="info != null">
	        	info = #{info},
	        </if>
	        <if test="province != null">
	        	province = #{province},
	        </if>
	        <if test="type != null">
	        	type = #{type},
	        </if>
	        <if test="operators != null">
	        	operators = #{operators},
	        </if>
	        <if test="extJson != null">
	        	ext_json = #{extJson},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_goods_activity WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.GoodsActivity">
		SELECT
			*
		FROM
			t_goods_activity 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="title != null">
				AND title = #{title}
			</if>
			<if test="execLogic != null">
				AND exec_logic = #{execLogic}
			</if>
			<if test="info != null">
				AND info = #{info}
			</if>
			<if test="province != null">
				AND province = #{province}
			</if>
			<if test="type != null">
				AND type = #{type}
			</if>
			<if test="operators != null">
				AND operators = #{operators}
			</if>
			<if test="extJson != null">
				AND ext_json = #{extJson}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="title != null">
				AND title = #{title}
			</if>
			<if test="execLogic != null">
				AND exec_logic = #{execLogic}
			</if>
			<if test="info != null">
				AND info = #{info}
			</if>
			<if test="province != null">
				AND province = #{province}
			</if>
			<if test="type != null">
				AND type = #{type}
			</if>
			<if test="operators != null">
				AND operators = #{operators}
			</if>
			<if test="extJson != null">
				AND ext_json = #{extJson}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_goods_activity
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.GoodsActivity">
		SELECT 
			*
		FROM
			t_goods_activity 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.GoodsActivity" resultType="com.anl.card.persistence.po.GoodsActivity">
		SELECT 
			*
		FROM 
			t_goods_activity 
	    <include refid="whereForPo" />
	</select>
</mapper>

