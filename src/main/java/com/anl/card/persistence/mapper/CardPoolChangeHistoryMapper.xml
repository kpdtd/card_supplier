<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.CardPoolChangeHistoryMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_card_pool_change_history (
        	id,
        	card_id,
        	original_pool_id,
        	final_pool_id,
        	trigger_point,
        	batch_code,
        	create_time
        ) VALUES (
        	#{id},
        	#{cardId},
        	#{originalPoolId},
        	#{finalPoolId},
        	#{triggerPoint},
        	#{batchCode},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.CardPoolChangeHistory">
        UPDATE t_card_pool_change_history 
		<set>
	        <if test="cardId != null">
	        	card_id = #{cardId},
	        </if>
	        <if test="originalPoolId != null">
	        	original_pool_id = #{originalPoolId},
	        </if>
	        <if test="finalPoolId != null">
	        	final_pool_id = #{finalPoolId},
	        </if>
	        <if test="triggerPoint != null">
	        	trigger_point = #{triggerPoint},
	        </if>
	        <if test="batchCode != null">
	        	batch_code = #{batchCode},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_card_pool_change_history WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.CardPoolChangeHistory">
		SELECT
			*
		FROM
			t_card_pool_change_history 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="originalPoolId != null">
				AND original_pool_id = #{originalPoolId}
			</if>
			<if test="finalPoolId != null">
				AND final_pool_id = #{finalPoolId}
			</if>
			<if test="triggerPoint != null">
				AND trigger_point = #{triggerPoint}
			</if>
			<if test="batchCode != null">
				AND batch_code = #{batchCode}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="originalPoolId != null">
				AND original_pool_id = #{originalPoolId}
			</if>
			<if test="finalPoolId != null">
				AND final_pool_id = #{finalPoolId}
			</if>
			<if test="triggerPoint != null">
				AND trigger_point = #{triggerPoint}
			</if>
			<if test="batchCode != null">
				AND batch_code = #{batchCode}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_card_pool_change_history
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.CardPoolChangeHistory">
		SELECT 
			*
		FROM
			t_card_pool_change_history 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.CardPoolChangeHistory" resultType="com.anl.card.persistence.po.CardPoolChangeHistory">
		SELECT 
			*
		FROM 
			t_card_pool_change_history 
	    <include refid="whereForPo" />
	</select>
</mapper>

