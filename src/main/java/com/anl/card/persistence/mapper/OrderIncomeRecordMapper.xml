<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.OrderIncomeRecordMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_order_income_record (
        	id,
        	create_time,
        	order_id,
        	out_trade_no,
        	out_trade_no_time,
        	agency_id,
        	agency_name,
        	card_id,
        	batch_number,
        	iccid,
        	plan_id,
        	plan_name,
        	money,
        	income,
        	status
        ) VALUES (
        	#{id},
        	#{createTime},
        	#{orderId},
        	#{outTradeNo},
        	#{outTradeNoTime},
        	#{agencyId},
        	#{agencyName},
        	#{cardId},
        	#{batchNumber},
        	#{iccid},
        	#{planId},
        	#{planName},
        	#{money},
        	#{income},
        	#{status}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.OrderIncomeRecord">
        UPDATE t_order_income_record 
		<set>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="orderId != null">
	        	order_id = #{orderId},
	        </if>
	        <if test="outTradeNo != null">
	        	out_trade_no = #{outTradeNo},
	        </if>
	        <if test="outTradeNoTime != null">
	        	out_trade_no_time = #{outTradeNoTime},
	        </if>
	        <if test="agencyId != null">
	        	agency_id = #{agencyId},
	        </if>
	        <if test="agencyName != null">
	        	agency_name = #{agencyName},
	        </if>
	        <if test="cardId != null">
	        	card_id = #{cardId},
	        </if>
	        <if test="batchNumber != null">
	        	batch_number = #{batchNumber},
	        </if>
	        <if test="iccid != null">
	        	iccid = #{iccid},
	        </if>
	        <if test="planId != null">
	        	plan_id = #{planId},
	        </if>
	        <if test="planName != null">
	        	plan_name = #{planName},
	        </if>
	        <if test="money != null">
	        	money = #{money},
	        </if>
	        <if test="income != null">
	        	income = #{income},
	        </if>
	        <if test="status != null">
	        	status = #{status}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_order_income_record WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.OrderIncomeRecord">
		SELECT
			*
		FROM
			t_order_income_record 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="orderId != null">
				AND order_id = #{orderId}
			</if>
			<if test="outTradeNo != null">
				AND out_trade_no = #{outTradeNo}
			</if>
			<if test="outTradeNoTime != null">
				AND out_trade_no_time = #{outTradeNoTime}
			</if>
			<if test="agencyId != null">
				AND agency_id = #{agencyId}
			</if>
			<if test="agencyName != null">
				AND agency_name = #{agencyName}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="batchNumber != null">
				AND batch_number = #{batchNumber}
			</if>
			<if test="iccid != null">
				AND iccid = #{iccid}
			</if>
			<if test="planId != null">
				AND plan_id = #{planId}
			</if>
			<if test="planName != null">
				AND plan_name = #{planName}
			</if>
			<if test="money != null">
				AND money = #{money}
			</if>
			<if test="income != null">
				AND income = #{income}
			</if>
			<if test="status != null">
				AND status = #{status}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="orderId != null">
				AND order_id = #{orderId}
			</if>
			<if test="outTradeNo != null">
				AND out_trade_no = #{outTradeNo}
			</if>
			<if test="agencyId != null">
				AND agency_id = #{agencyId}
			</if>
			<if test="agencyName != null">
				AND agency_name = #{agencyName}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="batchNumber != null">
				AND batch_number = #{batchNumber}
			</if>
			<if test="iccid != null">
				AND iccid = #{iccid}
			</if>
			<if test="planId != null">
				AND plan_id = #{planId}
			</if>
			<if test="planName != null">
				AND plan_name = #{planName}
			</if>
			<if test="money != null">
				AND money = #{money}
			</if>
			<if test="income != null">
				AND income = #{income}
			</if>
			<if test="status != null">
				AND status = #{status}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_order_income_record
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.OrderIncomeRecord">
		SELECT 
			*
		FROM
			t_order_income_record 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.OrderIncomeRecord" resultType="com.anl.card.persistence.po.OrderIncomeRecord">
		SELECT 
			*
		FROM 
			t_order_income_record 
	    <include refid="whereForPo" />
	</select>
</mapper>

