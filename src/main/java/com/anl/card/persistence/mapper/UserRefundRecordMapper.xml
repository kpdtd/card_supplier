<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.UserRefundRecordMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_user_refund_record (
        	id,
        	card_id,
        	pay_type,
        	goods_id,
        	money,
        	out_trade_no,
        	trade_no,
        	payer,
        	state,
        	causes,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{cardId},
        	#{payType},
        	#{goodsId},
        	#{money},
        	#{outTradeNo},
        	#{tradeNo},
        	#{payer},
        	#{state},
        	#{causes},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.UserRefundRecord">
        UPDATE t_user_refund_record 
		<set>
	        <if test="cardId != null">
	        	card_id = #{cardId},
	        </if>
	        <if test="payType != null">
	        	pay_type = #{payType},
	        </if>
	        <if test="goodsId != null">
	        	goods_id = #{goodsId},
	        </if>
	        <if test="money != null">
	        	money = #{money},
	        </if>
	        <if test="outTradeNo != null">
	        	out_trade_no = #{outTradeNo},
	        </if>
	        <if test="tradeNo != null">
	        	trade_no = #{tradeNo},
	        </if>
	        <if test="payer != null">
	        	payer = #{payer},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="causes != null">
	        	causes = #{causes},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_user_refund_record WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.UserRefundRecord">
		SELECT
			*
		FROM
			t_user_refund_record 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="payType != null">
				AND pay_type = #{payType}
			</if>
			<if test="goodsId != null">
				AND goods_id = #{goodsId}
			</if>
			<if test="money != null">
				AND money = #{money}
			</if>
			<if test="outTradeNo != null">
				AND out_trade_no = #{outTradeNo}
			</if>
			<if test="tradeNo != null">
				AND trade_no = #{tradeNo}
			</if>
			<if test="payer != null">
				AND payer = #{payer}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="causes != null">
				AND causes = #{causes}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="cardId != null">
				AND card_id = #{cardId}
			</if>
			<if test="payType != null">
				AND pay_type = #{payType}
			</if>
			<if test="goodsId != null">
				AND goods_id = #{goodsId}
			</if>
			<if test="money != null">
				AND money = #{money}
			</if>
			<if test="outTradeNo != null">
				AND out_trade_no = #{outTradeNo}
			</if>
			<if test="tradeNo != null">
				AND trade_no = #{tradeNo}
			</if>
			<if test="payer != null">
				AND payer = #{payer}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="causes != null">
				AND causes = #{causes}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_user_refund_record
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.UserRefundRecord">
		SELECT 
			*
		FROM
			t_user_refund_record 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.UserRefundRecord" resultType="com.anl.card.persistence.po.UserRefundRecord">
		SELECT 
			*
		FROM 
			t_user_refund_record 
	    <include refid="whereForPo" />
	</select>
</mapper>

