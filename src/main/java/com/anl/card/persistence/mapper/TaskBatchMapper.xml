<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.TaskBatchMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_task_batch (
        	id,
        	task_batch_number,
        	task_name,
        	task_exec_logic,
        	category,
        	task_state,
        	item_total,
        	item_success,
        	return_result,
        	start_time,
        	end_time,
        	create_time
        ) VALUES (
        	#{id},
        	#{taskBatchNumber},
        	#{taskName},
        	#{taskExecLogic},
        	#{category},
        	#{taskState},
        	#{itemTotal},
        	#{itemSuccess},
        	#{returnResult},
        	#{startTime},
        	#{endTime},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.TaskBatch">
        UPDATE t_task_batch 
		<set>
	        <if test="taskBatchNumber != null">
	        	task_batch_number = #{taskBatchNumber},
	        </if>
	        <if test="taskName != null">
	        	task_name = #{taskName},
	        </if>
	        <if test="taskExecLogic != null">
	        	task_exec_logic = #{taskExecLogic},
	        </if>
	        <if test="category != null">
	        	category = #{category},
	        </if>
	        <if test="taskState != null">
	        	task_state = #{taskState},
	        </if>
	        <if test="itemTotal != null">
	        	item_total = #{itemTotal},
	        </if>
	        <if test="itemSuccess != null">
	        	item_success = #{itemSuccess},
	        </if>
	        <if test="returnResult != null">
	        	return_result = #{returnResult},
	        </if>
	        <if test="startTime != null">
	        	start_time = #{startTime},
	        </if>
	        <if test="endTime != null">
	        	end_time = #{endTime},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_task_batch WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.TaskBatch">
		SELECT
			*
		FROM
			t_task_batch 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="taskBatchNumber != null">
				AND task_batch_number = #{taskBatchNumber}
			</if>
			<if test="taskName != null">
				AND task_name = #{taskName}
			</if>
			<if test="taskExecLogic != null">
				AND task_exec_logic = #{taskExecLogic}
			</if>
			<if test="category != null">
				AND category = #{category}
			</if>
			<if test="taskState != null">
				AND task_state = #{taskState}
			</if>
			<if test="itemTotal != null">
				AND item_total = #{itemTotal}
			</if>
			<if test="itemSuccess != null">
				AND item_success = #{itemSuccess}
			</if>
			<if test="returnResult != null">
				AND return_result = #{returnResult}
			</if>
			<if test="startTime != null">
				AND start_time = #{startTime}
			</if>
			<if test="endTime != null">
				AND end_time = #{endTime}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="taskBatchNumber != null">
				AND task_batch_number = #{taskBatchNumber}
			</if>
			<if test="taskName != null">
				AND task_name = #{taskName}
			</if>
			<if test="taskExecLogic != null">
				AND task_exec_logic = #{taskExecLogic}
			</if>
			<if test="category != null">
				AND category = #{category}
			</if>
			<if test="taskState != null">
				AND task_state = #{taskState}
			</if>
			<if test="itemTotal != null">
				AND item_total = #{itemTotal}
			</if>
			<if test="itemSuccess != null">
				AND item_success = #{itemSuccess}
			</if>
			<if test="returnResult != null">
				AND return_result = #{returnResult}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_task_batch
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.TaskBatch">
		SELECT 
			*
		FROM
			t_task_batch 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.TaskBatch" resultType="com.anl.card.persistence.po.TaskBatch">
		SELECT 
			*
		FROM 
			t_task_batch 
	    <include refid="whereForPo" />
	</select>
</mapper>

