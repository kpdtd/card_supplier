<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.PlanDefinitionMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_plan_definition (
        	id,
        	code,
        	name,
        	sub_name,
        	monthly_plan_price,
        	flow_unit,
        	flow_unit_price,
        	type,
        	state,
        	info,
        	effective_time,
        	display_sort,
        	create_time,
        	update_time
        ) VALUES (
        	#{id},
        	#{code},
        	#{name},
        	#{subName},
        	#{monthlyPlanPrice},
        	#{flowUnit},
        	#{flowUnitPrice},
        	#{type},
        	#{state},
        	#{info},
        	#{effectiveTime},
        	#{displaySort},
        	#{createTime},
        	#{updateTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.PlanDefinition">
        UPDATE t_plan_definition 
		<set>
	        <if test="name != null">
	        	name = #{name},
	        </if>
	        <if test="subName != null">
	        	sub_name = #{subName},
	        </if>
	        <if test="monthlyPlanPrice != null">
	        	monthly_plan_price = #{monthlyPlanPrice},
	        </if>
	        <if test="flowUnit != null">
	        	flow_unit = #{flowUnit},
	        </if>
	        <if test="flowUnitPrice != null">
	        	flow_unit_price = #{flowUnitPrice},
	        </if>
	        <if test="type != null">
	        	type = #{type},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="info != null">
	        	info = #{info},
	        </if>
	        <if test="effectiveTime != null">
	        	effective_time = #{effectiveTime},
	        </if>
	        <if test="displaySort != null">
	        	display_sort = #{displaySort},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime},
	        </if>
	        <if test="updateTime != null">
	        	update_time = #{updateTime}
	        </if>
	    </set>
        WHERE
	        id = #{id},
	        code = #{code}
	</update>

	<delete id="deleteById">
        DELETE FROM t_plan_definition WHERE
        id = #{id},
        code = #{code}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.PlanDefinition">
		SELECT
			*
		FROM
			t_plan_definition 
	    WHERE
	        id = #{id} ,
	        code = #{code} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="code != null">
				AND code = #{code}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="subName != null">
				AND sub_name = #{subName}
			</if>
			<if test="monthlyPlanPrice != null">
				AND monthly_plan_price = #{monthlyPlanPrice}
			</if>
			<if test="flowUnit != null">
				AND flow_unit = #{flowUnit}
			</if>
			<if test="flowUnitPrice != null">
				AND flow_unit_price = #{flowUnitPrice}
			</if>
			<if test="type != null">
				AND type = #{type}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="info != null">
				AND info = #{info}
			</if>
			<if test="effectiveTime != null">
				AND effective_time = #{effectiveTime}
			</if>
			<if test="displaySort != null">
				AND display_sort = #{displaySort}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
			<if test="updateTime != null">
				AND update_time = #{updateTime}
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="code != null">
				AND code = #{code}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="subName != null">
				AND sub_name = #{subName}
			</if>
			<if test="monthlyPlanPrice != null">
				AND monthly_plan_price = #{monthlyPlanPrice}
			</if>
			<if test="flowUnit != null">
				AND flow_unit = #{flowUnit}
			</if>
			<if test="flowUnitPrice != null">
				AND flow_unit_price = #{flowUnitPrice}
			</if>
			<if test="type != null">
				AND type = #{type}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="info != null">
				AND info = #{info}
			</if>
			<if test="effectiveTime != null">
				AND effective_time = #{effectiveTime}
			</if>
			<if test="displaySort != null">
				AND display_sort = #{displaySort}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_plan_definition
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.PlanDefinition">
		SELECT 
			*
		FROM
			t_plan_definition 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.PlanDefinition" resultType="com.anl.card.persistence.po.PlanDefinition">
		SELECT 
			*
		FROM 
			t_plan_definition 
	    <include refid="whereForPo" />
	</select>
</mapper>

