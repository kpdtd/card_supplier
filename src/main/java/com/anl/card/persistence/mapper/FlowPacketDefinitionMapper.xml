<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.FlowPacketDefinitionMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_flow_packet_definition (
        	id,
        	code,
        	name,
        	flow_number,
        	price,
        	display_sort,
        	use_sort,
        	start_time,
        	valid_days,
        	tips,
        	deatil,
        	state,
        	creator,
        	create_time
        ) VALUES (
        	#{id},
        	#{code},
        	#{name},
        	#{flowNumber},
        	#{price},
        	#{displaySort},
        	#{useSort},
        	#{startTime},
        	#{validDays},
        	#{tips},
        	#{deatil},
        	#{state},
        	#{creator},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.FlowPacketDefinition">
        UPDATE t_flow_packet_definition 
		<set>
	        <if test="code != null">
	        	code = #{code},
	        </if>
	        <if test="name != null">
	        	name = #{name},
	        </if>
	        <if test="flowNumber != null">
	        	flow_number = #{flowNumber},
	        </if>
	        <if test="price != null">
	        	price = #{price},
	        </if>
	        <if test="displaySort != null">
	        	display_sort = #{displaySort},
	        </if>
	        <if test="useSort != null">
	        	use_sort = #{useSort},
	        </if>
	        <if test="startTime != null">
	        	start_time = #{startTime},
	        </if>
	        <if test="validDays != null">
	        	valid_days = #{validDays},
	        </if>
	        <if test="tips != null">
	        	tips = #{tips},
	        </if>
	        <if test="deatil != null">
	        	deatil = #{deatil},
	        </if>
	        <if test="state != null">
	        	state = #{state},
	        </if>
	        <if test="creator != null">
	        	creator = #{creator},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_flow_packet_definition WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.FlowPacketDefinition">
		SELECT
			*
		FROM
			t_flow_packet_definition 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="code != null">
				AND code = #{code}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="flowNumber != null">
				AND flow_number = #{flowNumber}
			</if>
			<if test="price != null">
				AND price = #{price}
			</if>
			<if test="displaySort != null">
				AND display_sort = #{displaySort}
			</if>
			<if test="useSort != null">
				AND use_sort = #{useSort}
			</if>
			<if test="startTime != null">
				AND start_time = #{startTime}
			</if>
			<if test="validDays != null">
				AND valid_days = #{validDays}
			</if>
			<if test="tips != null">
				AND tips = #{tips}
			</if>
			<if test="deatil != null">
				AND deatil = #{deatil}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="creator != null">
				AND creator = #{creator}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="code != null">
				AND code = #{code}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="flowNumber != null">
				AND flow_number = #{flowNumber}
			</if>
			<if test="price != null">
				AND price = #{price}
			</if>
			<if test="displaySort != null">
				AND display_sort = #{displaySort}
			</if>
			<if test="useSort != null">
				AND use_sort = #{useSort}
			</if>
			<if test="startTime != null">
				AND start_time = #{startTime}
			</if>
			<if test="validDays != null">
				AND valid_days = #{validDays}
			</if>
			<if test="tips != null">
				AND tips = #{tips}
			</if>
			<if test="deatil != null">
				AND deatil = #{deatil}
			</if>
			<if test="state != null">
				AND state = #{state}
			</if>
			<if test="creator != null">
				AND creator = #{creator}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_flow_packet_definition
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.FlowPacketDefinition">
		SELECT 
			*
		FROM
			t_flow_packet_definition 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.FlowPacketDefinition" resultType="com.anl.card.persistence.po.FlowPacketDefinition">
		SELECT 
			*
		FROM 
			t_flow_packet_definition 
	    <include refid="whereForPo" />
	</select>
</mapper>

