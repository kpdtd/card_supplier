<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.anl.card.persistence.mapper.RgoodsActivityMapper">
    
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO t_r_goods_activity (
        	id,
        	goods_id,
        	activity_id,
        	create_time
        ) VALUES (
        	#{id},
        	#{goodsId},
        	#{activityId},
        	#{createTime}
        )
    ]]>
	</insert>

	<update id="update" parameterType="com.anl.card.persistence.po.RgoodsActivity">
        UPDATE t_r_goods_activity 
		<set>
	        <if test="goodsId != null">
	        	goods_id = #{goodsId},
	        </if>
	        <if test="activityId != null">
	        	activity_id = #{activityId},
	        </if>
	        <if test="createTime != null">
	        	create_time = #{createTime}
	        </if>
	    </set>
        WHERE
	        id = #{id}
	</update>

	<delete id="deleteById">
        DELETE FROM t_r_goods_activity WHERE
        id = #{id}
	</delete>

	<select id="getById" resultType="com.anl.card.persistence.po.RgoodsActivity">
		SELECT
			*
		FROM
			t_r_goods_activity 
	    WHERE
	        id = #{id} 
	</select>

	<!-- 查询条件where,如果有时间范围查询，参数必须是startTime 和 endTime -->
	<sql id="where">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="goodsId != null">
				AND goods_id = #{goodsId}
			</if>
			<if test="activityId != null">
				AND activity_id = #{activityId}
			</if>
			<if test="startTime != null">
	       	<![CDATA[
				AND create_time >= #{startTime} 
			]]>
			</if>
			<if test="endTime != null">
			<![CDATA[
				AND create_time < #{endTime}
			]]>
			</if>
		</where>
	</sql>
	
	<sql id="whereForPo">
		<where>
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="goodsId != null">
				AND goods_id = #{goodsId}
			</if>
			<if test="activityId != null">
				AND activity_id = #{activityId}
			</if>
		</where>
	</sql>	

	<select id="count" parameterType="java.util.Map" resultType="int">
		SELECT count(*) FROM t_r_goods_activity
		<include refid="where" />
	</select>

	<select id="getListByMap" parameterType="java.util.Map" resultType="com.anl.card.persistence.po.RgoodsActivity">
		SELECT 
			*
		FROM
			t_r_goods_activity 
	    <include refid="where" />
		<if test="startPage!= null">
			limit #{startPage}, #{pageSize} 
		</if>	
	</select>
	
	<select id="getListByPo" parameterType="com.anl.card.persistence.po.RgoodsActivity" resultType="com.anl.card.persistence.po.RgoodsActivity">
		SELECT 
			*
		FROM 
			t_r_goods_activity 
	    <include refid="whereForPo" />
	</select>
</mapper>

